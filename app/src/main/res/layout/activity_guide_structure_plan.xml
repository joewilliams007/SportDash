<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/projectGrey"
    android:id="@+id/main"
    tools:context=".plans.create.GuideStructurePlanActivity">

    <TextView
        android:id="@+id/textViewTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/g_u_i_d_e"
        android:textColor="@color/projectGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/textViewGuide3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/main_text_background"
        android:padding="10dp"
        android:text="[1]\n\nSelect any Element to edit its task.\n\n\n[2]\n\nAll the tasks will be played one by one, once the Training Plan is finished\n\n\n[3]\n\nWhen editing an element you can set its name, description and element time. Ignore the rest for now.\n\nExample:\n\nname: pushups\n\ndescription: lay on a sports underground and pull your body towards your knees\n\ntime: 30 seconds\n\n\n[3]\n\nTo finish a Training Plan, go to your Structured Plan with all the selected elements and tap on OPTIONS/FINISH"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTop" />
</androidx.constraintlayout.widget.ConstraintLayout>